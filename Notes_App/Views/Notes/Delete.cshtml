@using Notes_App.Domain.Entities
@model Note

@{
    ViewData["Title"] = "Delete Note";
}

<h2>Delete Note</h2>

<h4>Are you sure you want to delete this note?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
        <dt class="col-sm-2">Updated</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
